---
import logoGit from "../assets/logo-github.png";
import profilGit from "../assets/github.jpg";
import LinkedIn from "../assets/LinkedIn_icon.png";
import photo_profile from "../assets/photo_profile.jpg";
import Gmail_icon from "../assets/Gmail_icon.png";
---

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-blue-100 p-8 w-8/12">
    <div>
        <div class="flex items-center">
          <img class="m-1 h-20" src={logoGit.src} alt="logo github" />
          <h1 class="text-6xl font-bold pb-4">GitHub</h1>
        </div>
        <div class="flex items-center">
          <img class="m-1 h-20 rounded-full" src={profilGit.src} alt="profil github" />
          <h2 class="text-6xl font-bold pb-4">Jojo Lapin</h2>
          <h3 class="text-6xl font-bold pb-4">johanvadenne</h3>
        </div>
    </div>

    <div>
        <div class="flex items-center">
          <img class="m-1 h-20" src={LinkedIn.src} alt="logo github" />
          <h1 class="text-6xl font-bold pb-4">LinkedIn</h1>
        </div>
        <div class="flex items-center">
          <img class="m-1 h-20 rounded-full" src={photo_profile.src} alt="profil LinkedIn" />
          <h3 class="text-6xl font-bold pb-4">johan Vadenne</h3>
        </div>
    </div>

    <div>
        <div class="flex items-center">
          <img class="m-1 h-20" src={Gmail_icon.src} alt="logo Gmail" />
          <h1 class="text-6xl font-bold pb-4">Gmail_icon</h1>
        </div>
        <div class="flex items-center">
          <h3 class="text-6xl font-bold pb-4">johanvadenne@gmail.com</h3>
        </div>
    </div>
    
</div>